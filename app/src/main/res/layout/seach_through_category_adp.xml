<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/black"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rr_led_Descp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x_et_bg"
        android:elevation="5dp"
        >
        <RelativeLayout
            android:id="@+id/rr_first_descp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg1"
            >

            <RelativeLayout
                android:id="@+id/rr_img"
                android:layout_width="@dimen/size2"
                android:layout_height="55dp"
                >


                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mrg1"
                    android:src="@drawable/logo"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_txt_descp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mrg1"
                android:layout_toRightOf="@+id/rr_img"
                android:layout_marginTop="@dimen/mrg1">

                <RelativeLayout
                    android:id="@+id/rr_txt_right"
                    android:layout_width="@dimen/size33"
                    android:layout_height="@dimen/size0"
                    android:layout_alignParentRight="true"

                    >
                    <TextView
                        android:id="@+id/txt_review"
                        android:layout_width="@dimen/size33"
                        android:layout_height="@dimen/size1"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:textSize="@dimen/mrg2"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:text="15 Reviews"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_txt_right_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rr_txt_right"
                    >
                    <RatingBar
                        android:id="@+id/ratin_totla"
                        style="@style/customRatingBar"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="2.345"
                        android:isIndicator="true"
                        android:visibility="gone"

                        />
                    <RatingBar
                        android:id="@+id/rb_adpshop_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="2.5"
                        android:theme="@style/RatingBar"
                        android:isIndicator="true"
                        />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_txt_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rr_proname"
                        android:layout_width="@dimen/size8"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_product_namee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mrg4"
                            android:text="Doctor Name"
                            android:visibility="visible"
                            android:singleLine="true"

                            android:textColor="@color/black"/>



                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rr_products_prize"
                        android:layout_marginTop="@dimen/mrg1"
                        android:layout_width="@dimen/size13"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rr_proname"
                        >
                        <TextView
                            android:id="@+id/txt_products_prizee"
                            android:layout_width="@dimen/size13"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/mrg2"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            android:singleLine="true"
                            />



                    </RelativeLayout>

                    <View
                        android:id="@+id/vew"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_below="@+id/rr_products_prize"
                        android:background="@color/gray"
                        android:layout_marginTop="@dimen/mrg1"
                        />

                    <RelativeLayout
                        android:id="@+id/rr_txt_distributor_name"

                        android:layout_width="@dimen/size8"
                        android:layout_height="@dimen/size2"
                        android:layout_below="@+id/vew"
                        >

                        <ImageView
                            android:id="@+id/img_loc"
                            android:layout_width="@dimen/mrg3"
                            android:layout_height="@dimen/mrg4"
                            android:layout_centerVertical="true"
                            android:background="@drawable/location_icon"
                            />
                        <TextView
                            android:id="@+id/txt_distributor_namee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_loc"
                            android:text="Indore"
                            android:layout_centerVertical="true"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/mrg1"
                            android:textColor="@color/black"
                        android:textSize="@dimen/mrg3" />


                    </RelativeLayout>

                </RelativeLayout>




            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>