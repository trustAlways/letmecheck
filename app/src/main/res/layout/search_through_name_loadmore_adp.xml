<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rr_awrd_recognization_descp1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"

        >

        <RelativeLayout
            android:id="@+id/rr_img_awrd_recognization_descp1"
            android:layout_width="@dimen/size1"
            android:layout_height="@dimen/size0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size0">

            <ImageView
                android:id="@+id/img_awrd_recognization_descp1"
                android:layout_width="@dimen/mrg4"
                android:layout_height="@dimen/mrg4"
                android:background="@drawable/tick_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_txt_awrd_recognization_descp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rr_img_awrd_recognization_descp1">

            <TextView
                android:id="@+id/txt_awrd_recognization_descp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:textColor="@color/black"
                android:textSize="@dimen/mrg4"

                />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>